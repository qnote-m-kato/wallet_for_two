<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <ImageView
            android:id="@+id/button_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <ImageView
            android:id="@+id/button_next"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_next"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/date_year"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/button_back"
            app:layout_constraintEnd_toStartOf="@id/button_next"/>

        <GridLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="5"
            android:layout_marginVertical="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/date_year"
            app:layout_constraintBottom_toTopOf="@id/all">
            <TextView
                android:id="@+id/january"
                android:text="1月"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:background="@color/grid_background"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"/>
            <TextView
                android:id="@+id/february"
                android:text="2月"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:background="@color/grid_background"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_columnWeight="1"/>
            <TextView
                android:id="@+id/march"
                android:text="3月"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:background="@color/grid_background"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="2"
                android:layout_columnWeight="1"/>
            <TextView
                android:id="@+id/april"
                android:text="4月"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:background="@color/grid_background"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"/>
            <TextView
                android:id="@+id/may"
                android:text="5月"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:background="@color/grid_background"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_columnWeight="1"/>
            <TextView
                android:id="@+id/june"
                android:text="6月"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:background="@color/grid_background"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:layout_column="2"
                android:layout_columnWeight="1"/>
            <TextView
                android:id="@+id/july"
                android:text="7月"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:background="@color/grid_background"
                android:layout_row="2"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"/>
            <TextView
                android:id="@+id/august"
                android:text="8月"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:background="@color/grid_background"
                android:layout_row="2"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_columnWeight="1"/>
            <TextView
                android:id="@+id/september"
                android:text="9月"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:background="@color/grid_background"
                android:layout_row="2"
                android:layout_rowWeight="1"
                android:layout_column="2"
                android:layout_columnWeight="1"/>
            <TextView
                android:id="@+id/october"
                android:text="10月"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:background="@color/grid_background"
                android:layout_row="3"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"/>
            <TextView
                android:id="@+id/november"
                android:text="11月"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:background="@color/grid_background"
                android:layout_row="3"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_columnWeight="1"/>
            <TextView
                android:id="@+id/december"
                android:text="12月"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:background="@color/grid_background"
                android:layout_row="3"
                android:layout_rowWeight="1"
                android:layout_column="2"
                android:layout_columnWeight="1"/>
        </GridLayout>
        <TextView
            android:id="@+id/all"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="全期間"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginHorizontal="5dp"
            android:padding="5dp"
            android:background="@color/grid_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>