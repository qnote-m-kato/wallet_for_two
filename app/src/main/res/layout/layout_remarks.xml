<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/title"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="15dp"
            android:text="@string/label_remarks"
            android:textColor="@color/purple_200"
            android:textStyle="bold"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:contentDescription="@string/icon_calendar" />
        <EditText
            android:id="@+id/edit_text_remarks"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="20dp"
            android:gravity="top|left"
            android:background="#00000000"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/purple_200"
            app:layout_constraintTop_toBottomOf="@id/edit_text_remarks"
            app:layout_constraintStart_toStartOf="@id/edit_text_remarks"
            app:layout_constraintEnd_toEndOf="@id/edit_text_remarks"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>